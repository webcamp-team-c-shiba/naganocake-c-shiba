<h1>注文履歴一覧</h1>

 <table class="table table-bordered mt-5 col-8">
        <thead class="thead-light">
            <tr>
                <td>注文日</td>
                <td>配送先</td>
                <td>注文商品</td>
                <td>支払金額</td>
                <td>ステータス</td>
                <td>注文詳細</td>
            </tr>
        </thead>
        <tbody>
            <% @orders.each do |order| %>
            <tr>
                <td><%= order.created_at.strftime("%Y/%m/%d") %></td>    
                <td><%= order.address%></td>
                <td>
                    <% OrderItem.where(order_id: order.id).each do |order_item|  %>
                        <%= order_item.item.name %><br>
                    <% end %>
                </td>
                <td><%= number_with_delimiter(order.payment) %>円</td>
                <td><%= Order.statuses_i18n[order.status] %></td>
                <td><%= link_to "表示する", order_path(order) %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
