<h3 class="my-3 ml-5">退会確認</h3>

<p>本当に退会しますか？</p>

<%= form_with(url: customers_withdrawal_path, method: :patch) do |f| %>
  <div class="form-group row ml-3">
    <div class="col-md-2"></div>
    <div class="col-md-10 form-row">
      <div class="col-sm-4 col-form-label">
        <%= f.label :is_deleted, '退会する', class: 'form-check-label' %>
      </div>
      <div class="col-sm-8">
        <%= f.check_box :is_deleted, class: 'form-check-input' %>
      </div>
      <div class="col-md-3">
        <%= link_to "退会しない", customers_path, class: "btn btn-secondary px-3" %>
      </div>
      <div class="col-md-3">
        <%= f.submit "退会する", class: "btn btn-danger px-3", data: { confirm: '本当に退会しますか？' } %>
      </div>
    </div>
  </div>
<% end %>
