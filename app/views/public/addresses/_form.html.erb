<%= form_with model: address, url: addresses_path, class: "form-group" do |f| %>
<form>
  <div class="form-group row">
    <label class="col-lg-3 col-md-5 col-form-label">郵便番号(ハイフンなし)</label>
    <div class="col-lg-9 form-row">
      <div class="col-lg-3">
        <%= f.text_field :postcode, autofocus: true, autocomplete: "postal_code", placeholder: "0000000", class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-lg-3 col-form-label">住所</label>
    <div class="col-lg-9 form-row">
      <div class="col-lg-7">
        <%= f.text_field :address, autocomplete: "street-address", placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-lg-3 col-form-label">宛名</label>
    <div class="col-lg-9 form-row">
      <div class="col-lg-3">
        <%= f.text_field :name, autocomplete: "off", placeholder: "令和道子", class: "form-control" %>
      </div>
      <div class="col-lg-4">
      </div>
      <div class="col-lg-3 mt-2 mt-lg-0">
        <%= f.submit "新規登録", class: "btn btn-success px-4" %>
      </div>
    </div>
  </div>
</form>
<% end %>