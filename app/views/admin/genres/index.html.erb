<div class="container my-4 px-sm-1">
  <div class="px-1 ml-md-2">
    <h5 class="bg-light text-center ml-5 mb-4" style="width: 220px;">ジャンル一覧・追加</h5>
  </div>
  <%= render 'layouts/errors', obj: @genre %>
  <div class="col-sm-12 col-md-10 col-lg-9 col-xl-7 px-sm-0 px-md-1">
    <%= form_with(model: @genre, url: admin_genres_path, class: 'form flex-grow-1') do |form| %>
      <div class="col form-group mb-4 d-flex px-2 my-4">
        <div class="col-md-9 form-row px-0">
          <div class="col-md-3 px-md-0 d-flex align-items-center">
            <label class="col-form-label font-weight-bold">ジャンル名</label>
          </div>
          <div class="col-9 col-sm-7 col-md-5 px-md-3">
            <%= form.text_field :name, class: 'form-control', placeholder: 'ジャンル名' %>
          </div>
          <div class="col-md-4 pl-md-3 mt-2 mt-md-0">
            <%= form.submit '新規登録', class: 'btn btn-success px-4' %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="col-md-8 ml-0 mt-4 px-0">
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="bg-light col-6 col-sm-8">ジャンル</th>
            <th class="bg-light col-6 col-sm-4"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success px-3' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
