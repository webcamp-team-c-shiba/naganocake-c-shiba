<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2 class="my-4">商品詳細</h2>
      <div class="table-responsive">
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= image_tag @item.get_item_image(150, 150), class: "img-fluid" %>
              </td>
              <tr>
                <tr><th>商品名</th></tr>
                <tr><td><%= @item.name %></td></tr>
                <tr><th>商品ID</th></tr>
                <tr><td><%= @item.id %></td></tr>
                <tr><th>ジャンル</th></tr>
                <tr><td><%= @item.genre.name %></td></tr>
                <tr><th>税抜価格</br>(税込価格)</th></tr>
                <tr><td> <%= @item.price %>（ <%= @item.price * 1.1%>円</td></tr>
                <tr><th>ステータス</th></tr>
                <tr><td>
                  <% if @item.is_stopped %>
                    <span class="text-secondary">販売停止中</span>
                   <% else %>
                    <span class="text-success">販売中</span>
                   <% end %>
                </td></tr>

                <div class="d-flex justify-content-center">
                  <%= link_to edit_admin_item_path(@item), class: "btn btn-primary me-2" do %>
                    編集
                  <% end %>
                </div>
              </tr>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
